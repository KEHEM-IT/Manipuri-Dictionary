{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/client",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api" },
    { "source": "/:path*", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.ts": {
      "includeFiles": "{dist/server/data/**,api/data/**,src/server/data/**}"
    }
  }
}
